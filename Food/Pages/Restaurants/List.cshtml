@page
@model Ptest1.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    Query
                    @* <i class="glyphicon glyphicon-search"></i> *@
                </button>
            </span>
        </div>
    </div>
</form>

@* @foreach (var restaurant in Model.Restaurants) *@
@* { *@
@*     <partial name="_Summary" model="restaurant"/> *@
@* } *@
<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">Go to Detail</a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">Edit</a>
                <a class="btn btn-lg" asp-page="./Delete" asp-route-restaurantId="@restaurant.Id">Delete</a>
            </td>
        </tr>
    }

</table>
<a asp-page="./Edit" class="btn btn-primary">Add New Restaurant</a>
<div>@Model.Message</div>
